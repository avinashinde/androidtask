<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity" >

    <ImageView
        android:id="@+id/img_place"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@android:color/darker_gray" />

    <TextView
        android:id="@+id/txt_place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_place"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Large Text"
        android:textColor="@android:color/white"
        android:background="#60000000"
        android:padding="7dp"
        android:textStyle="italic|bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_place" />

    <TextView
        android:id="@+id/txt_is_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_loc"
        android:layout_below="@+id/ratingBar"
        android:layout_marginTop="20dp"
        android:text="is Open Now" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_alignRight="@+id/txt_is_open"
        android:layout_below="@+id/txt_is_open"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:padding="5dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btn_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_address"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:text="Add to Fav" />

    <Button
        android:id="@+id/btn_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_fav"
        android:layout_alignBottom="@+id/btn_fav"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:text="Show Loc" />

</RelativeLayout>
